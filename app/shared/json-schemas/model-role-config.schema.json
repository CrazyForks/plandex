{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://plandex.ai/schemas/model-role-config.schema.json",
  "title": "Model Role Config",
  "description": "Config for a defined model role within a model pack",
  "type": "object",
  "properties": {
    "role": {
      "$ref": "./definitions/model-roles.schema.json"
    },
    "modelId": {
      "type": "string"
    },
    "temperature": {
      "type": "number"
    },
    "topP": {
      "type": "number"
    },
    "reservedOutputTokens": {
      "type": "number"
    },
    "maxConvoTokens": {
      "type": "number"
    },
    "largeContextFallback": {
      "$ref": "./definitions/model-role-config.schema.json"
    },
    "largeOutputFallback": {
      "$ref": "./definitions/model-role-config.schema.json"
    },
    "errorFallback": {
      "$ref": "./definitions/model-role-config.schema.json"
    },
    "strongModel": {
      "$ref": "./definitions/model-role-config.schema.json"
    }
  },
  "required": [
    "role",
    "modelId"
  ]
}