{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://plandex.ai/schemas/model-config.schema.json",
  "title": "Model Config",
  "description": "Config for a model",
  "type": "object",
  "properties": {
    "modelId": {
      "type": "string"
    },
    "publisher": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "defaultMaxConvoTokens": {
      "type": "number"
    },
    "maxTokens": {
      "type": "number"
    },
    "maxOutputTokens": {
      "type": "number"
    },
    "reservedOutputTokens": {
      "type": "number"
    },
    "preferredOutputFormat": {
      "type": "string",
      "enum": [
        "xml",
        "tool-call-json"
      ]
    },
    "systemPromptDisabled": {
      "type": "boolean"
    },
    "roleParamsDisabled": {
      "type": "boolean"
    },
    "stopDisabled": {
      "type": "boolean"
    },
    "predictedOutputEnabled": {
      "type": "boolean"
    },
    "includeReasoning": {
      "type": "boolean"
    },
    "reasoningBudget": {
      "type": "number"
    },
    "hasImageSupport": {
      "type": "boolean"
    },
    "reasoningEffortEnabled": {
      "type": "boolean"
    },
    "reasoningEffort": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "supportsCacheControl": {
      "type": "boolean"
    },
    "singleMessageNoSystemPrompt": {
      "type": "boolean"
    },
    "tokenEstimatePaddingPct": {
      "type": "number"
    },
    "providers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "provider": {
            "$ref": "./definitions/model-providers.schema.json"
          },
          "customProvider": {
            "type": "string"
          },
          "modelName": {
            "type": "string"
          }
        },
        "required": [
          "provider",
          "modelName"
        ],
        "allOf": [
          {
            "if": {
              "properties": {
                "provider": {
                  "const": "custom"
                }
              }
            },
            "then": {
              "required": [
                "customProvider"
              ]
            },
            "else": {
              "not": {
                "required": [
                  "customProvider"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1
    }
  },
  "required": [
    "modelId",
    "defaultMaxConvoTokens",
    "maxTokens",
    "maxOutputTokens",
    "reservedOutputTokens",
    "preferredOutputFormat",
    "providers"
  ],
  "additionalProperties": false
}