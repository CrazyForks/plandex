{
  "name": "vscode-plandex",
  "displayName": "Plandex",
  "description": "VSCode extension for Plandex integration",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:pdx"
  ],

  "main": "./dist/extension.js",
  "contributes": {
    "languages": [{
      "id": "pdx",
      "aliases": ["PDX", "pdx"],
      "extensions": [".pdx"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "pdx",
      "scopeName": "source.pdx",
      "path": "./syntaxes/pdx.tmLanguage.json",
      "embeddedLanguages": {
        "meta.embedded.block.yaml": "yaml",
        "text.html.markdown": "markdown"
      }
    }],
    "commands": [{
      "command": "plandex.tellPlandex",
      "title": "Tell Plandex",
      "icon": "$(play)"
    }],
    "keybindings": [{
      "command": "plandex.showFilePicker",
      "key": "shift+2",
      "mac": "shift+2",
      "when": "editorTextFocus && editorLangId == pdx"
    }]
  },

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1", 
    "@types/node": "^20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },


  "dependencies": {
    "yaml": "^2.3.1"
  }
}
